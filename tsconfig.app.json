{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/**/**/*",
    "src/**/*.vue",
    "src/"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  // 
  //
  "skipLibCheck": true,
  // "strict": true,
  "sourceMap": true,
  //
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      //
      //
      "@assets/*": [
        "src/assets/*"
      ],
      "@Modules/*": [
        "src/App/Modules/*"
      ]
    },
    "typeRoots": [
      "src/typings",
      "./node_modules/@types/"
    ]
  }
}